html
    head
        title مستودع خطوط الويب العربية
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js")
        script
            function set_font(name) {
                $("textarea#sample").css("font-family", name);
            }
            function select_font(name, btn) {
                set_font(name);
                $(".selected_button").removeClass("selected_button");
                $(btn).addClass("selected_button");
                var root = location.protocol + '//' + location.host;
                var url = encodeURI(root + "/css?" + name);
                $("#code").text('<link rel="stylesheet" type="text/css" href="' + url + '">');
            }
        - each name in fontnames
            style
                @font-face {
                    font-family: #{name};
                    src: url('#{fonts[name]}');
                }
    body
        table: tr
            td
                div#selector
                    | Select Font:
                    - each name in fontnames
                        div(class: "button", onclick="select_font('" + name + "', this)")
                            =name

            td
                textarea#sample 
                  الخط العربي على الانترنت
                  تستطيع تحرير هذا النص
        div#code Code here
        style
           td { vertical-align: top; }
           div#selector { direction: ltr; text-align: left; width: 300px; }
           div#selector .button { 
               margin: 8px; padding: 10px; 
               width: 200px; 
               border: 1px solid silver; border-radius: 10px;
               cursor: pointer;  
           }
           div#selector .selected_button { 
               background-color: hsl(150, 40%, 93%);
               color: hsl(44, 80%, 10%);
               }
           textarea#sample { 
               width: 600px; height: 200px; padding: 15px; border-style: none;
               font-size: 2em; text-align: center; direction: rtl; 
               }
            div#code {
                margin: 5 10%;
                padding: 20px;
                color: hsl(120, 70%, 25%);
                font: normal 15px monospace;
            }
        script
            $(document).ready(function(){
                $($("div#selector .button").get(0)).click();
                });


